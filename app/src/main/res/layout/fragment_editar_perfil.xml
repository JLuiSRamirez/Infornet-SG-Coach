<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/icon" />

    <TextView
        android:id="@+id/nombre_coach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="19dp"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:hint="Nombre_coach" />

    <TextView
        android:id="@+id/gimnasio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_coach"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:hint="Gimnasio"
        android:textAlignment="center"
         />

    <TextView
        android:id="@+id/horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gimnasio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:hint="Horario"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/biografia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horario"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:hint="Biografia"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="inherit"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/biografia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        app:srcCompat="@drawable/ic_edit_24dp" />


</RelativeLayout>