<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_correo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingLeft="40dp"
    android:paddingTop="20dp"
    android:paddingRight="40dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        app:srcCompat="@mipmap/icon" />

    <TextView
        android:id="@+id/nombre_coach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:hint="Nombre"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_coach"
        android:layout_marginTop="1dp"
        android:hint="Correo"
        android:textSize="14sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/gimnasio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correo"
        android:layout_marginTop="1dp"
        android:hint="Gimnasio"
        android:textSize="14sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gimnasio"
        android:layout_marginTop="1dp"
        android:hint="Horario"
        android:textSize="14sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/biografia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horario"
        android:layout_marginTop="15dp"
        android:hint="Biografia"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="inherit"
        android:textSize="20dp" />


    <ProgressBar
        android:id="@+id/prog_bar_perfil"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_below="@+id/biografia"
        android:indeterminateTint="@color/colorPrimary"
        android:max="100"/>

    <Button
        android:id="@+id/btn_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prog_bar_perfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Editar" />


</RelativeLayout>